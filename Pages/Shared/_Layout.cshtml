@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;800&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
        }

        /* Clean AURIK Logo Style */
        .navbar-brand {
            font-weight: 800;
            letter-spacing: 2px;
            text-transform: uppercase;
            font-size: 1.5rem;
        }

        /* Minimalist Nav Links */
        .nav-link {
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #1a1a1a !important;
            padding: 0 15px !important;
        }

        .navbar {
            padding: 20px 0;
            border-bottom: 1px solid #eee !important;
        }

        /* Dark High-Contrast Footer */
        .footer-aurik {
            background-color: #000000;
            color: #ffffff;
            padding: 80px 0;
            margin-top: 100px;
        }

            .footer-aurik a {
                color: #666;
                text-decoration: none;
                transition: 0.3s;
            }

                .footer-aurik a:hover {
                    color: #fff;
                }

        .footer-logo {
            font-weight: 800;
            font-size: 2rem;
            letter-spacing: 3px;
        }

        /* Remove the boxy container from the original template */
        .main-content {
            min-height: 70vh;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white mb-0">
            <div class="container-fluid px-5">
                <a class="navbar-brand" asp-area="" asp-page="/Index">AURIK</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Contact</a>
                        </li>
                    </ul>
                </div>

                <div class="d-flex align-items-center">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-aurik">
        <div class="container-fluid px-5">
            <div class="row align-items-end">
                <div class="col-md-6">
                    <div class="footer-logo mb-4">AURIK</div>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex flex-column gap-2 text-uppercase" style="font-size: 1.2rem; font-weight: bold;">
                        <a asp-page="/Index">Product</a>
                        <a asp-page="/Privacy">About</a>
                        <a href="#">Process</a>
                        <a href="#">Contacts</a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary mt-5 mb-4">
            <div class="row small text-muted">
                <div class="col-md-6">
                    &copy; 2026 @(ViewData["User"] ?? "Timotheo Che D. Padilla")
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="me-3">Instagram</a>
                    <a href="#" class="me-3">LinkedIn</a>
                    <a asp-page="/Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>