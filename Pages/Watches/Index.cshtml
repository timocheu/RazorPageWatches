@page
@model RazorPageWatches.Pages.Watches.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Watches Available</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Watch) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
